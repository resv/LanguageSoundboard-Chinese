<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindtipper.gridlayoutdemo.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--LEFT COLUMN LEFT COLUMN LEFT COLUMN LEFT COLUMN LEFT COLUMN LEFT COLUMN LEFT COLUMN-->
        <Button
            android:text="hello&#10;&#10;nǐ hǎo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/hello"
            android:background="#7f7fff"
            android:textColor="#ffffff" />

        <Button
            android:text="goodbye&#10;&#10;zài jiàn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/goodbye"
            android:background="#FF7F7FFF"
            android:textColor="#ffffff" />


        <Button
            android:text="thanks&#10;&#10;xiè xiè "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/thanks"
            android:background="#ff7d7d" />

        <Button
            android:text="i get it&#10;&#10;wǒ dǒng le "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/igetit"
            android:background="#FFFF00DD" />

        <Button
            android:text="how much&#10;is it?&#10;&#10;duō shǎo qián"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/howmuchisit"
            android:background="#011fff"
            android:textColor="#ffffff" />

        <Button
            android:text="happy birthday!&#10;&#10;shēngrì kuàilè"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/happybirthday"
            android:background="#ff0000" />


        <!--MIDDLE COLUMN MIDDLE COLUMN MIDDLE COLUMN MIDDLE COLUMN MIDDLE COLUMN MIDDLE COLUMN-->

        <Button
            android:text="good evening&#10;&#10;wǎn shàng hǎo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/goodevening"
            android:background="#fffb1c" />


        <Button
            android:text="see you later&#10;&#10;huí tóu jiàn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/seeyoulater"
            android:background="#FFFFFB1C" />

        <Button
            android:text="thanks&#10;a lot&#10;&#10;fēicháng gǎn xiè"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="7sp"
            android:onClick="buttonTapped"
            android:id="@+id/thanksalot"
            android:background="#FFFF7D7D" />

        <Button
            android:text="I don't&#10;understand&#10;&#10;wǒ bù dǒng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="7sp"
            android:onClick="buttonTapped"
            android:id="@+id/idontunderstand"
            android:background="#ff00dd" />

        <Button
            android:text="sorry&#10;&#10;duì bu qǐ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/sorry"
            android:background="#FF011FFF"
            android:textColor="#ffffff" />

        <Button
            android:text="happy holiday!&#10;&#10;jiérì kuàilè"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/happyholiday"
            android:background="#FFFF0000" />

        <!--RIGHT COLUMN RIGHT COLUMN RIGHT COLUMN RIGHT COLUMN RIGHT COLUMN RIGHT COLUMN-->
        <Button
            android:text="yes&#10;&#10;shì"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/yes"
            android:background="#01986f"
            android:textColor="#ffffff" />

        <Button
            android:text="no&#10;&#10;bú shì"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/no"
            android:background="#FF01986F"
            android:textColor="#ffffff" />

        <Button
            android:text="don't mention it&#10;&#10;méi guàn xì "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="6sp"
            android:onClick="buttonTapped"
            android:id="@+id/dontmentionit"
            android:background="#FFFF7D7D" />

        <Button
            android:text="i don't know&#10;&#10;wǒ bù zhīdào "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="8sp"
            android:onClick="buttonTapped"
            android:id="@+id/idontknow"
            android:background="#FFFF00DD" />

        <Button
            android:text="excuse me&#10;where are&#10;the toilets?&#10;&#10;qǐngwèn xǐshǒujiān&#10;zài nǎli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="6sp"
            android:onClick="buttonTapped"
            android:id="@+id/excusemewherearethetoilets"
            android:background="#FF011FFF"
            android:fontFamily="sans-serif-medium"
            android:textColor="#ffffff" />

        <Button
            android:text="happy new year!&#10;&#10;xīnnián hǎo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="7sp"
            android:onClick="buttonTapped"
            android:id="@+id/happynewyear"
            android:background="#FFFF0000" />

    </GridLayout>
</RelativeLayout>
